<h1>Tables</h1>

<h2>Cat</h2>
<table>
  <tr>
    <td>name</td>
  </tr>
  <% @cats.each do |cat| %>
    <tr>
      <td><%= cat.name%></td>
    </tr>
  <% end %>
</table>

<h2>Todo</h2>
<table>
  <tr>
    <td>tasks</td>
    <td>finished</td>
  </tr>
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.tasks%></td>
      <td><%= todo.finished%></td>
    </tr>
  <% end %>
</table>

<h2>User</h2>
<table>
  <tr>
    <td>username</td>
    <td>email</td>
    <td>age</td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username%></td>
      <td><%= user.email%></td>
      <td><%= user.age%></td>
    </tr>
  <% end %>
</table>